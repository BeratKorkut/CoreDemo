@using EntityLayer.Concrete
@model List<Category>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategoriler Hakkında</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Kategori Adı </th>
                                <th> Durum </th>
                                <th> Kategori Rayting </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th> @item.CategoryID </th>
                                    <td> @item.CategoryName </td>

                                    @if (item.CategoryStatus)
                                    {
                                        <td>
                                            <label class="btn-sm btn-gradient-primary">Aktif</label>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <label class="btn-sm btn-gradient-dark">Pasif</label>
                                        </td>
                                    }

                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 40%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>