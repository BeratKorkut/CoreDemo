@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <lable>Adınız Soyadınız</lable>
                            <input type="text" asp-for="WriterName" class="form-control" />
                            <span asp-validation-for="WriterName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <lable>Mail Adresi</lable>
                            <input type="email" asp-for="WriterMail" class="form-control" />
                            <span asp-validation-for="WriterMail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <lable>Şifre</lable>
                            <input type="password" asp-for="WriterPassword" class="form-control" />
                            <span asp-validation-for="WriterPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <lable>Görsel Dosya Yolu</lable>
                            <br />
                            <input type="file" asp-for="WriterImage" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
    <br />
    <script>
        $('#btn1').click(function () {
            swal({
                title: "Site Kabul Şartları",
                text: "Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne varmadan gönderilmeye devam edecektir. Eğer e-posta bülteninden çıkmak isterseniz mail ileti dizisii durdurabilirsiniz, şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullanıcının görmeyeceği şekilde veri tabanlarımızda saklanmaktadır.",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        swal("Teşekkürler!", {
                            icon: "success",
                        });
                    } else {
                        swal("Kayıt olabilmek için şartları kabul etmeniz gerekmektedir!");
                    }
                });
        });
    </script>
</section>

